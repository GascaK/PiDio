<MainButton@Button>:
	font_size: 32

<PiDioGrid>:

	GridLayout:
		id: main
		rows: 2
		font_size: 48
		padding: 10
		spacing: 10

		BoxLayout:
			spacing: 10
			MainButton:
				text: 'Radio'
				on_press: 
					root.manager.transition.direction = 'down'
					root.manager.transition.duration = 1
					root.manager.current = 'radio_screen'
			MainButton:
				text: 'Bluetooth'
				on_press: main.Bluetooth()
			MainButton:
				text: 'AndroidAuto'
				on_press: main.AndIoPlay()

		BoxLayout:
			spacing: 10
			MainButton:
				text: 'Settings'
				on_press: main.Settings()
			MainButton:
				text: 'USB'
				on_press: main.USB()
			MainButton:
				text: 'Auxillary'
				on_press: main.Auxillary()

<RadioScreen>
	GridLayout:
		id: radio_scr
		rows: 2
		font_size: 32

		BoxLayout:
			cols: 3
			GridLayout:
				rows: 3
				MainButton:
					id: ch_one
					text: '1'
					on_press: root.change_ch(ch_one)
				MainButton:
					id: ch_two
					text: '2'
					on_press: root.change_ch(ch_two)
				MainButton:
					id: ch_three
					text: '3'
					on_press: root.change_ch(ch_three)
			BoxLayout:
				Label:
					id: cur_stat
					text: 'Err'
			GridLayout:
				rows: 3
				MainButton:
					id: ch_four
					text: '4'
					on_press: root.change_ch(ch_four)
				MainButton:
					id: ch_five
					text: '5'
					on_press: root.change_ch(ch_five)
				MainButton:
					id: ch_six
					text: '6'
					on_press: root.change_ch(ch_six)

		BoxLayout:
			GridLayout:
				rows: 3
				cols: 3
				Label:
					text: 'Volume'
				MainButton:
					text: 'Radio'
					on_press: root.manager.current = 'pidio_screen'